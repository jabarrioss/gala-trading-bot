# Environment Configuration
NODE_ENV=development
PORT=3000

# Blockchain Configuration
# Your wallet's private key (NEVER commit the real .env file)
PRIVATE_KEY=your_private_key_here

# Your wallet address in format: eth|123...abc
WALLET_ADDRESS=eth|123456789abcdef

# Trading Parameters
# Enable dry run mode for safe testing (true/false)
DRY_RUN_MODE=true

# Default slippage tolerance (0.05 = 5%)
DEFAULT_SLIPPAGE=0.05

# Maximum trade size in GALA tokens
MAX_TRADE_SIZE=1000

# Daily loss limit in USD
DAILY_LOSS_LIMIT=500

# External Services
# Discord webhook URL for notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Database Configuration
# Path to SQLite database file (optional, defaults to ./data/trading.db)
DB_PATH=./data/trading.db

# Logging Configuration
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Directory for log files (optional, defaults to ./logs)
LOG_DIR=./logs